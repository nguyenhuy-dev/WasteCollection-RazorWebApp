@page
@model WasteCollection.RazorWebApp.HuyNQ.Pages.CollectorAssignmentsHuyNqs.DetailsModel

@{
    ViewData["Title"] = "Assignment Details";
}

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb / Back Navigation -->
        <div class="mb-6">
            <a asp-page="./Index" class="text-green-600 hover:text-green-800 font-medium flex items-center transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Back to List
            </a>
        </div>

        <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100">
            <!-- Header -->
            <div class="bg-gradient-to-r from-green-600 to-green-700 px-6 py-5 md:flex md:items-center md:justify-between">
                <div class="flex items-center">
                    <h1 class="text-2xl font-bold text-white">Assignment</h1>
                </div>
                <div class="mt-4 md:mt-0">
                    @{
                        var statusStr = Model.CollectorAssignmentsHuyNq.Status?.ToString() ?? "";
                        var badgeClass = "bg-white text-gray-800";
                        if (statusStr.Contains("Completed") || statusStr.Contains("Collected"))
                            badgeClass = "bg-green-100 text-green-800 border-green-200";
                        else if (statusStr.Contains("Pending") || statusStr.Contains("Assigned"))
                            badgeClass = "bg-blue-100 text-blue-800 border-blue-200";
                        else if (statusStr.Contains("Way"))
                            badgeClass = "bg-indigo-100 text-indigo-800 border-indigo-200";
                        else if (statusStr.Contains("Cancel"))
                            badgeClass = "bg-red-100 text-red-800 border-red-200";
                    }
                    <span class="inline-flex items-center px-4 py-1.5 rounded-full text-sm font-semibold border @badgeClass shadow-sm">
                        @statusStr
                    </span>
                </div>
            </div>

            <div class="p-6 md:p-8 space-y-8">
                
                <!-- Information Grid -->
                <div>
                    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4 pb-2 border-b border-gray-100">Information</h3>
                    <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                        
                        <!-- Assigned Date -->
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Assigned Date</dt>
                            <dd class="mt-1 text-sm text-gray-900 font-semibold">@Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.AssignedDate)</dd>
                        </div>

                        <!-- Estimated Arrival -->
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Estimated Arrival (ETA)</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.EstimatedArrivalTime)</dd>
                        </div>

                        <!-- Actual Arrival -->
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Actual Arrival</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                @if (Model.CollectorAssignmentsHuyNq.ArrivalTime.HasValue)
                                {
                                    @Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.ArrivalTime)
                                }
                                else
                                {
                                    <span class="text-gray-400 italic">Not yet arrived</span>
                                }
                            </dd>
                        </div>

                        <!-- Completion Time -->
                         <div>
                            <dt class="text-sm font-medium text-gray-500">Completion Time</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                 @if (Model.CollectorAssignmentsHuyNq.CompletionTime.HasValue)
                                {
                                    @Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.CompletionTime)
                                }
                                else
                                {
                                    <span class="text-gray-400 italic">Not completed</span>
                                }
                            </dd>
                        </div>

                        <!-- Collected Weight -->
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Collected Weight</dt>
                            <dd class="mt-1 text-xl font-bold text-green-600">
                                @if (Model.CollectorAssignmentsHuyNq.CollectedWeight.HasValue)
                                {
                                    <span>@Model.CollectorAssignmentsHuyNq.CollectedWeight kg</span>
                                }
                                else
                                {
                                    <span class="text-gray-400 italic text-sm font-normal">-</span>
                                }
                            </dd>
                        </div>

                    </dl>
                </div>

                <!-- Location & Notes -->
                <div>
                    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4 pb-2 border-b border-gray-100">Location & Notes</h3>
                    <dl class="grid grid-cols-1 gap-y-6">
                        
                        <!-- Address -->
                        <div>
                             <dt class="text-sm font-medium text-gray-500 flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                Address
                            </dt>
                            <dd class="mt-1 text-sm text-gray-900 bg-gray-50 p-3 rounded-lg border border-gray-100">
                                @Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.ReportHuyNq.Address)
                                <span class="text-gray-400 mx-2">|</span>
                                <span class="text-gray-600">@Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.ReportHuyNq.Address)</span>
                            </dd>
                        </div>

                        <!-- Notes -->
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Notes</dt>
                            <dd class="mt-1 text-sm text-gray-600 bg-yellow-50 p-4 rounded-lg border border-yellow-100 italic">
                                @if(!string.IsNullOrEmpty(Model.CollectorAssignmentsHuyNq.Notes)) {
                                    @Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.Notes)
                                } else {
                                    <span>No notes provided.</span>
                                }
                            </dd>
                        </div>
                    </dl>
                </div>

                <!-- Proof Image -->
                <div>
                    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4 pb-2 border-b border-gray-100">Proof of Collection</h3>
                    <div class="mt-2 text-sm text-gray-900">
                         @if (!string.IsNullOrEmpty(Model.CollectorAssignmentsHuyNq.ProofImageUrl))
                        {
                            <div class="rounded-lg overflow-hidden border border-gray-200 shadow-sm max-w-sm">
                                <img src="@Model.CollectorAssignmentsHuyNq.ProofImageUrl" alt="Proof Image" class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300" />
                            </div>
                            <div class="mt-2">
                                <a href="@Model.CollectorAssignmentsHuyNq.ProofImageUrl" target="_blank" class="text-green-600 hover:text-green-800 text-sm font-medium inline-flex items-center">
                                    Open Full Size
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                    </svg>
                                </a>
                            </div>
                        }
                        else
                        {
                             <div class="flex items-center justify-center h-24 bg-gray-50 border-2 border-dashed border-gray-300 rounded-lg text-gray-400">
                                <span class="text-sm">No proof image uploaded</span>
                            </div>
                        }
                    </div>
                </div>

            </div>

            <!-- Footer Actions -->
            <div class="bg-gray-50 px-6 py-4 flex flex-col sm:flex-row sm:justify-end gap-3 border-t border-gray-100">
                <a asp-page="./Edit" asp-route-id="@Model.CollectorAssignmentsHuyNq.AssignmentId" class="inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Edit Assignment
                </a>
                <a asp-page="./Index" class="inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
                    Back to List
                </a>
            </div>

        </div>
    </div>
</div>
