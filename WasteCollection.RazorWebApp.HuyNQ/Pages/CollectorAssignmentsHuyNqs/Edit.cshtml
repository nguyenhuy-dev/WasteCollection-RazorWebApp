@page
@model WasteCollection.RazorWebApp.HuyNQ.Pages.CollectorAssignmentsHuyNqs.EditModel

@{
    ViewData["Title"] = "Edit Assignment";
}

<div class="max-w-4xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-gray-100">
        <div class="bg-gradient-to-r from-green-600 to-green-700 px-6 py-4 flex justify-between items-center">
            <h1 class="text-xl font-bold text-white flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit Assignment
            </h1>
            <a asp-page="./Index" class="inline-flex items-center px-3 py-1.5 border border-white/20 rounded-md text-sm font-medium text-white hover:bg-white/10 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to List
            </a>
        </div>

        <div class="p-8">
            <p class="text-gray-500 mb-6 text-sm">Update the details for this collector assignment below.</p>
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="rounded-md bg-red-50 p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">There were errors with your submission</h3>
                        </div>
                    </div>
                </div>

                <input type="hidden" asp-for="CollectorAssignmentsHuyNq.AssignmentId" />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Report ID -->
                    <div class="col-span-1 md:col-span-2">
                        <label asp-for="CollectorAssignmentsHuyNq.ReportHuyNqid" class="block text-sm font-medium text-gray-700 mb-1">Report ID</label>
                        <select asp-for="CollectorAssignmentsHuyNq.ReportHuyNqid" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm py-2.5 px-3 border" asp-items="ViewBag.ReportHuyNqid"></select>
                        <span asp-validation-for="CollectorAssignmentsHuyNq.ReportHuyNqid" class="text-xs text-red-600 mt-1 block"></span>
                    </div>

                    <!-- Assigned Date -->
                    <div>
                        <label asp-for="CollectorAssignmentsHuyNq.AssignedDate" class="block text-sm font-medium text-gray-700 mb-1">Assigned Date</label>
                        <input asp-for="CollectorAssignmentsHuyNq.AssignedDate" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm py-2.5 px-3 border" />
                        <span asp-validation-for="CollectorAssignmentsHuyNq.AssignedDate" class="text-xs text-red-600 mt-1 block"></span>
                    </div>

                    <!-- Estimated Arrival Time -->
                    <div>
                        <label asp-for="CollectorAssignmentsHuyNq.EstimatedArrivalTime" class="block text-sm font-medium text-gray-700 mb-1">Estimated Arrival</label>
                        <input asp-for="CollectorAssignmentsHuyNq.EstimatedArrivalTime" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm py-2.5 px-3 border" />
                        <span asp-validation-for="CollectorAssignmentsHuyNq.EstimatedArrivalTime" class="text-xs text-red-600 mt-1 block"></span>
                    </div>

                    <!-- Arrival Time -->
                    <div>
                        <label asp-for="CollectorAssignmentsHuyNq.ArrivalTime" class="block text-sm font-medium text-gray-700 mb-1">Actual Arrival</label>
                        <input asp-for="CollectorAssignmentsHuyNq.ArrivalTime" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm py-2.5 px-3 border" />
                        <span asp-validation-for="CollectorAssignmentsHuyNq.ArrivalTime" class="text-xs text-red-600 mt-1 block"></span>
                    </div>

                    <!-- Completion Time -->
                    <div>
                        <label asp-for="CollectorAssignmentsHuyNq.CompletionTime" class="block text-sm font-medium text-gray-700 mb-1">Completion Time</label>
                        <input asp-for="CollectorAssignmentsHuyNq.CompletionTime" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm py-2.5 px-3 border" />
                        <span asp-validation-for="CollectorAssignmentsHuyNq.CompletionTime" class="text-xs text-red-600 mt-1 block"></span>
                    </div>

                    <!-- Status -->
                    <div>
                        <label asp-for="CollectorAssignmentsHuyNq.Status" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                        <input asp-for="CollectorAssignmentsHuyNq.Status" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm py-2.5 px-3 border" />
                        <span asp-validation-for="CollectorAssignmentsHuyNq.Status" class="text-xs text-red-600 mt-1 block"></span>
                    </div>

                    <!-- Collected Weight -->
                    <div>
                        <label asp-for="CollectorAssignmentsHuyNq.CollectedWeight" class="block text-sm font-medium text-gray-700 mb-1">Collected Weight (kg)</label>
                        <input asp-for="CollectorAssignmentsHuyNq.CollectedWeight" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm py-2.5 px-3 border" />
                        <span asp-validation-for="CollectorAssignmentsHuyNq.CollectedWeight" class="text-xs text-red-600 mt-1 block"></span>
                    </div>

                    <!-- Proof Image URL -->
                    <div class="col-span-1 md:col-span-2">
                        <label asp-for="CollectorAssignmentsHuyNq.ProofImageUrl" class="block text-sm font-medium text-gray-700 mb-1">Proof Image URL</label>
                        <div class="mt-1 flex rounded-md shadow-sm">
                            <span class="inline-flex items-center rounded-l-md border border-r-0 border-gray-300 bg-gray-50 px-3 text-gray-500 sm:text-sm">http://</span>
                            <input asp-for="CollectorAssignmentsHuyNq.ProofImageUrl" class="block w-full flex-1 rounded-none rounded-r-md border-gray-300 focus:border-green-500 focus:ring-green-500 sm:text-sm py-2.5 px-3 border" placeholder="www.example.com/image.jpg" />
                        </div>
                        <span asp-validation-for="CollectorAssignmentsHuyNq.ProofImageUrl" class="text-xs text-red-600 mt-1 block"></span>
                    </div>

                    <!-- Notes -->
                    <div class="col-span-1 md:col-span-2">
                        <label asp-for="CollectorAssignmentsHuyNq.Notes" class="block text-sm font-medium text-gray-700 mb-1">Notes</label>
                        <textarea asp-for="CollectorAssignmentsHuyNq.Notes" rows="3" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm py-2.5 px-3 border"></textarea>
                        <span asp-validation-for="CollectorAssignmentsHuyNq.Notes" class="text-xs text-red-600 mt-1 block"></span>
                    </div>
                </div>

                <div class="mt-8 flex justify-end gap-3">
                    <a asp-page="./Index" class="inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">Cancel</a>
                    <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-green-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
