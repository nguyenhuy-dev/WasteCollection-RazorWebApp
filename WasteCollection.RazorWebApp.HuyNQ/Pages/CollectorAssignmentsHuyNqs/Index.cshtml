@page
@model WasteCollection.RazorWebApp.HuyNQ.Pages.CollectorAssignmentsHuyNqs.IndexModel

@{
    ViewData["Title"] = "Collector Assignments";
}

<!-- Tailwind is now in _Layout, but keeping it here just in case specific overrides needed, though redundant if layout has it.
     We can remove the script tag if we are sure _Layout loads it. Leaving it out for cleaner code as _Layout handles it. -->

<div class="p-6 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-center mb-6">
            <div>
                <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Collector Assignments</h1>
                <p class="mt-1 text-sm text-gray-500">Manage and track your waste collection tasks efficiently.</p>
            </div>
            <a asp-page="Create" class="mt-4 md:mt-0 inline-flex items-center justify-center px-5 py-2 border border-transparent text-sm font-medium rounded-full text-white bg-green-600 hover:bg-green-700 shadow-sm transition-all duration-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Create New
            </a>
        </div>

        <!-- Content Card -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">
                                Assignment Info
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">
                                @Html.DisplayNameFor(model => model.CollectorAssignmentsHuyNq[0].Status)
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">
                                Timings
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">
                                Outcome
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">
                                Location & Notes
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-bold text-gray-500 uppercase tracking-wider">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var item in Model.CollectorAssignmentsHuyNq)
                        {
                            <tr class="hover:bg-gray-50 transition-colors duration-150 relative">
                                <td class="px-6 py-4">
                                    <div class="text-sm font-medium text-gray-900">
                                        @Html.DisplayFor(modelItem => item.AssignedDate)
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var statusStr = item.Status?.ToString() ?? "";
                                        var badgeColor = "bg-gray-100 text-gray-800";
                                        if (statusStr.Contains("Completed") || statusStr.Contains("Collected"))
                                            badgeColor = "bg-green-100 text-green-800";
                                        else if (statusStr.Contains("Pending") || statusStr.Contains("Assigned"))
                                            badgeColor = "bg-blue-100 text-blue-800";
                                        else if (statusStr.Contains("Way") || statusStr.Contains("InProgress"))
                                            badgeColor = "bg-indigo-100 text-indigo-800";
                                        else if (statusStr.Contains("Cancel"))
                                            badgeColor = "bg-red-100 text-red-800";
                                    }
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @badgeColor">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-xs text-gray-500">
                                        <span class="font-semibold text-gray-700">ETA:</span> @Html.DisplayFor(modelItem => item.EstimatedArrivalTime)
                                    </div>
                                    <div class="text-xs text-gray-500 mt-1">
                                        <span class="font-semibold text-gray-700">Arr:</span> @Html.DisplayFor(modelItem => item.ArrivalTime)
                                    </div>
                                    <div class="text-xs text-gray-500 mt-1">
                                        <span class="font-semibold text-gray-700">Done:</span> @Html.DisplayFor(modelItem => item.CompletionTime)
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900 font-medium">
                                        @Html.DisplayFor(modelItem => item.CollectedWeight) kg
                                    </div>
                                    @if (!string.IsNullOrEmpty(item.ProofImageUrl))
                                    {
                                        <a href="@item.ProofImageUrl" target="_blank" class="flex items-center text-xs text-indigo-600 hover:text-indigo-900 underline mt-1">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                            </svg>
                                            View Proof
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-xs text-gray-400 italic">No Image</span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm text-gray-900 truncate max-w-[150px]" title="@item.Address">
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </div>
                                    <div class="text-xs text-gray-500 mt-1 truncate max-w-[150px]" title="@item.Notes">
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="relative inline-block text-left">
                                        <!-- Three dots button -->
                                        <button type="button" onclick="toggleDropdown('@item.AssignmentId')" class="text-gray-400 hover:text-gray-600 p-2 rounded-full hover:bg-gray-100 transition-colors focus:outline-none">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                                            </svg>
                                        </button>

                                        <!-- Dropdown menu -->
                                        <div id="dropdown-@item.AssignmentId" class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-20 origin-top-right">
                                            <div class="py-1" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
                                                <a asp-page="./Edit" asp-route-id="@item.AssignmentId" class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-green-700" role="menuitem">
                                                    <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                                    </svg>
                                                    Edit
                                                </a>
                                                <a asp-page="./Details" asp-route-id="@item.AssignmentId" class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-blue-700" role="menuitem">
                                                    <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                    </svg>
                                                    Details
                                                </a>
                                                <a asp-page="./Delete" asp-route-id="@item.AssignmentId" class="group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-red-700" role="menuitem">
                                                    <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-red-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                    </svg>
                                                    Delete
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (Model.CollectorAssignmentsHuyNq == null || !Model.CollectorAssignmentsHuyNq.Any())
                {
                    <div class="text-center py-12">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                        </svg>
                        <p class="mt-2 text-gray-500">No assignments found.</p>
                        <a asp-page="Create" class="mt-4 inline-block text-indigo-600 hover:text-indigo-800 font-medium">Create your first assignment &rarr;</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function toggleDropdown(id) {
        // Close all other dropdowns
        document.querySelectorAll('[id^="dropdown-"]').forEach(el => {
            if (el.id !== 'dropdown-' + id) {
                el.classList.add('hidden');
            }
        });

        // Toggle current
        const dropdown = document.getElementById('dropdown-' + id);
        dropdown.classList.toggle('hidden');
    }

    // Close when clicking outside
    window.addEventListener('click', function(e) {
        if (!e.target.closest('.relative')) {
            document.querySelectorAll('[id^="dropdown-"]').forEach(el => {
                el.classList.add('hidden');
            });
        }
    });
</script>
