@page
@model WasteCollection.RazorWebApp.HuyNQ.Pages.CollectorAssignmentsHuyNqs.DeleteModel

@{
    ViewData["Title"] = "Delete Assignment";
}

<div class="max-w-3xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-xl overflow-hidden border border-red-100">
        <!-- Header -->
        <div class="bg-red-50 border-b border-red-100 px-6 py-4 flex items-center justify-between">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-red-100 rounded-full p-2">
                    <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                </div>
                <div class="ml-4">
                    <h1 class="text-lg font-bold text-red-700">Delete Assignment</h1>
                    <p class="text-sm text-red-500">Are you sure you want to permanently remove this assignment?</p>
                </div>
            </div>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                Action cannot be undone
            </span>
        </div>

        <!-- Content -->
        <div class="px-6 py-6">
            <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                <!-- Report Address -->
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Report Address</dt>
                    <dd class="mt-1 text-sm text-gray-900 font-semibold">@Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.ReportHuyNq.Address)</dd>
                </div>

                <!-- Status -->
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Status</dt>
                    <dd class="mt-1">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            @Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.Status)
                        </span>
                    </dd>
                </div>

                <!-- Assigned Date -->
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Assigned Date</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.AssignedDate)</dd>
                </div>

                <!-- Estimated Arrival -->
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Estimated Arrival</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.EstimatedArrivalTime)</dd>
                </div>
                
                <!-- Actual Arrival -->
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Actual Arrival</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.ArrivalTime)</dd>
                </div>

                <!-- Completion Time -->
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Completion Time</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.CompletionTime)</dd>
                </div>

                <!-- Collected Weight -->
                <div class="sm:col-span-2 border-t border-gray-100 pt-4">
                    <div class="flex items-center justify-between">
                         <dt class="text-sm font-medium text-gray-500">Collected Weight</dt>
                         <dd class="text-lg font-bold text-gray-900">@Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.CollectedWeight) kg</dd>
                    </div>
                </div>

                 <!-- Proof Image -->
                <div class="sm:col-span-2 border-t border-gray-100 pt-4">
                    <dt class="text-sm font-medium text-gray-500 mb-2">Proof Image</dt>
                    <dd class="mt-1 text-sm text-gray-900 bg-gray-50 p-3 rounded-md border border-gray-200 break-all">
                         @Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.ProofImageUrl)
                    </dd>
                </div>

                <!-- Notes -->
                <div class="sm:col-span-2 border-t border-gray-100 pt-4">
                    <dt class="text-sm font-medium text-gray-500">Notes</dt>
                    <dd class="mt-1 text-sm text-gray-900 italic">"@Html.DisplayFor(model => model.CollectorAssignmentsHuyNq.Notes)"</dd>
                </div>
            </dl>
        </div>

        <!-- Actions -->
        <div class="px-6 py-4 bg-gray-50 flex flex-row-reverse gap-3 border-t border-gray-100">
             <form method="post" class="flex gap-3">
                <input type="hidden" asp-for="CollectorAssignmentsHuyNq.AssignmentId" />
                <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-red-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 w-full sm:w-auto">
                    Delete Assignment
                </button>
                <button type="submit" id="btnHubDelete" class="inline-flex justify-center rounded-md border border-transparent bg-red-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 w-full sm:w-auto">
                    Delete By SignalR
                </button>
                <a asp-page="./Index" class="inline-flex justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 w-full sm:w-auto">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script>
    "use strict";

    var connection = new signalR.HubConnectionBuilder().withUrl("/wasteCollectionHub").build();

    connection.start().then(function () {
        console.log("Client: Connected to the SignalR Hub");
    }).catch(function (err) {
        return console.error(err.toString());
    });

    document.getElementById("btnHubDelete").addEventListener("click", function (event) {
        var dataObj = document.getElementById("CollectorAssignmentsHuyNq_AssignmentId").value;
        console.log(dataObj);

        connection.invoke("HubDelete_CollectorAssignments", dataObj).catch(function (err) {
            return console.error(err.toString());
        });
        // event.preventDefault();
    });
</script>
